# ======================================================================
# Root Environment Variables for the Entire Project
#
# Instructions:
# 1. Copy this file to .env (in the project root).
# 2. Fill in the necessary values for your environment.
# 3. The root .env file should be in .gitignore and NOT committed.
# ======================================================================

# --- Common Configuration (Shared across multiple components) ---
# Used by Instavibe app, Social Agent, and potentially others if they access the same DB.
COMMON_GOOGLE_CLOUD_PROJECT="pokedemo-test" # COMMON_GOOGLE_CLOUD_PROJECT defines the Google Cloud Project ID used across all components.
COMMON_GOOGLE_CLOUD_PROJECT_NUMBER="YOUR_PROJECT_NUMBER" # Added
COMMON_DEFAULT_COMPUTE_SERVICE_ACCOUNT="YOUR_DEFAULT_COMPUTE_SA_EMAIL" # Added
COMMON_VERTEX_STAGING_BUCKET="YOUR_VERTEX_AI_STAGING_BUCKET_NAME" # Added
COMMON_GOOGLE_CLOUD_LOCATION="us-central1" # Added
COMMON_SPANNER_INSTANCE_ID="instavibe-graph-instance"
COMMON_SPANNER_DATABASE_ID="graphdb"

# --- Instavibe Application (instavibe/app.py) ---
INSTAVIBE_FLASK_SECRET_KEY="YOUR_INSTAVIBE_FLASK_SECRET_KEY_CHANGE_ME"
INSTAVIBE_GOOGLE_MAPS_API_KEY="YOUR_GOOGLE_MAPS_API_KEY_OR_LEAVE_BLANK"
INSTAVIBE_GOOGLE_MAPS_MAP_ID="YOUR_GOOGLE_MAPS_MAP_ID_OR_LEAVE_BLANK"
# For Flask local development server (app.run()):
INSTAVIBE_APP_HOST="0.0.0.0"
INSTAVIBE_APP_PORT="8080" # Default for instavibe app, Gunicorn uses $PORT in Cloud Run

# --- Agent: Orchestrate (agents/orchestrate/) ---
AGENTS_ORCHESTRATE_GOOGLE_GENAI_USE_VERTEXAI="TRUE"
AGENTS_ORCHESTRATE_AGENT_BASE_URL="http://localhost:8080" # Example, may point to instavibe app
AGENTS_ORCHESTRATE_REMOTE_AGENT_ADDRESSES="" # Comma-separated list of agent URLs

# --- Agent: Planner (agents/planner/) ---
AGENTS_PLANNER_GOOGLE_GENAI_USE_VERTEXAI="TRUE"
AGENTS_PLANNER_GOOGLE_API_KEY="YOUR_AGENTS_PLANNER_GOOGLE_API_KEY" # Optional: if specific API key needed
AGENTS_PLANNER_A2A_HOST="localhost"
AGENTS_PLANNER_A2A_PORT="10003"
AGENTS_PLANNER_PUBLIC_URL="https://us-central1-aiplatform.googleapis.com/v1/projects/laah-genai/locations/us-central1/reasoningEngines/6208326435539517440" # Often derived, but can be explicit for registration

# --- Agent: Platform MCP Client (agents/platform_mcp_client/) ---
AGENTS_PLATFORM_MCP_CLIENT_GOOGLE_GENAI_USE_VERTEXAI="TRUE"
AGENTS_PLATFORM_MCP_CLIENT_GOOGLE_API_KEY="YOUR_AGENTS_PLATFORM_MCP_CLIENT_GOOGLE_API_KEY" # Optional
AGENTS_PLATFORM_MCP_CLIENT_A2A_HOST="localhost"
AGENTS_PLATFORM_MCP_CLIENT_A2A_PORT="10002"
AGENTS_PLATFORM_MCP_CLIENT_PUBLIC_URL="http://localhost:10002/"
